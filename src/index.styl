body
  margin 0
  padding 0
  font-family sans-serif

*
  box-sizing border-box

:global #root
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.wrapper
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #fefefe

.navbar
  z-index 20
  position fixed
  top 0
  left 0
  width 100%
  height 64px
  background-color rgba(#fff, 0.9)
  border-bottom 1px solid rgba(#000, 0.1)

.content
  position relative
  width 100%
  height 100%
  overflow-y auto
  overflow-x hidden
  -webkit-overflow-scrolling touch
