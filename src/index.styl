@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 400
  src url('./assets/fonts/Roboto.ttf') format('truetype')

@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 500
  src url('./assets/fonts/Roboto-Medium.ttf') format('truetype')

@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 700
  src url('./assets/fonts/Roboto-Bold.ttf') format('truetype')

html
  position relative
  width 100%
  height 100%

body
  position relative
  width 100%
  margin 0
  padding 0
  font-family 'Roboto', sans-serif
  overflow-y auto
  overflow-x hidden
  -webkit-overflow-scrolling touch

*
  box-sizing border-box

:global #root
  position relative
  width 100%

.wrapper
  position relative
  width 100%
  background-color #fefefe

.navbar
  z-index 20
  position fixed
  top 0
  left 0
  width 100%
  height 64px
  background-color rgba(#fff, 0.9)
  border-bottom 1px solid rgba(#000, 0.1)

.content
  position relative
  width 100%
