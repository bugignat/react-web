.container
  display flex
  align-items center
  justify-content space-between
  position relative
  width 100%
  height 100%
  max-width 1280px
  margin 0 auto
  padding 0 15px

.logo
  display inline-block
  font-size 16px
  line-height 24px

.link
  padding 8px
  opacity 0.5
  color #000
  text-decoration none
  transition opacity 0.3s

.linkActive
  composes link
  opacity 1
