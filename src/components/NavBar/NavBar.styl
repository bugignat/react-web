.container
  z-index 1000
  position fixed
  top 0
  left 0
  right 0
  height 60px
  background-color #fff
  border-bottom 1px solid rgba(#000, 0.12)
  transition transform .3s
  @media (max-width: 576px)
    height 50px
  &.unpinned {
    transform: translate3d(0, -100%, 0);
  }
  &.pinned {
    background-color rgba(#fff, 0.98)
    transform: translate3d(0, 0, 0);
  }

.wrapper
  display flex
  align-items center
  justify-content space-between
  position relative
  width 100%
  height 100%
  max-width 1280px
  margin 0 auto
  padding 0 15px

.logo
  display inline-block
  font-size 16px
  line-height 24px

.link
  padding 8px
  opacity 0.5
  color #000
  text-decoration none
  transition opacity 0.3s

.linkActive
  composes link
  opacity 1
