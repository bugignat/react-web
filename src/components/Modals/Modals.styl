.content
  position relative
  width 100%
  height 100%
  max-width 340px
  max-height 340px
  padding 55px 15px 15px 15px
  background-color #fff
  outline none
  will-change transform
  transform scale3d(0.9, 0.9, 0.9)
  opacity 0
  transition transform .4s, opacity .4s
  &.contentAfterOpen
    transform scale3d(1, 1, 1)
    opacity 1
  &.contentBeforeClose
    transform scale3d(0.9, 0.9, 0.9)
    opacity 0

.overlay
  z-index 1000
  display flex
  align-items center
  justify-content center
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(#000, 0)
  transition background-color .4s
  overflow hidden
  user-select none
  -webkit-tap-highlight-color transparent
  &.overlayAfterOpen
    background-color rgba(#000, .3)
  &.overlayBeforeClose
    background-color rgba(#000, 0)

.close
  position absolute
  top 0
  right 0
  width 40px
  height 40px
  border none
  background-color #ddd
  outline none
